using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace _2
{
    class Program{
   
        static void Main(string[] args)
        {
            string x = Convert.ToString(Console.ReadLine());
            Console.Write(x[x.Length - 1]);
            for (int i = 1; i < (x.Length-1); i++)
            {
                Console.Write(x[i]);
                            
            }
            Console.Write(x[0]);
            Console.WriteLine();
           
        }
    }
}
