using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ConsoleApplication25
{
    class Program
    {
        static void Main(string[] args)
        
        
       
        
        
        {
            int sum = 0;
            int n = Convert.ToInt32(Console.ReadLine());
            m1(n,sum);
           
           
        }
        static public void m1(int n,int sum)
    {
        if (n >= 1)
        {

            sum += n;
            n--;
            m1(n, sum);
           
        }
        else
        { Console.WriteLine("ans " + sum); }
        
         
      
           
       
        
            
    }
    
    }
}
