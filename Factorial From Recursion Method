using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.IO;

namespace ConsoleApplication24
{
    class Program
    {
        static void Main(string[] args)
        {
                      
            int x = Convert.ToInt16(Console.ReadLine());
          
            m1(x,1);

        }
        static public void m1(int x,int c)
        {
         
            if (x > 1) 
            {
                c*=x;
                x--;
                m1(x,c);
                               
            }
                 
            else Console.WriteLine("The Factorial is " + x * c);
            
        
        }
    }
}
